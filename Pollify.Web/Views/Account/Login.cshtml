@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}



<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
        <div class="row">
            <div class="col-md-offset-2">
                <h2>Login</h2>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        
        

        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-7">
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-7">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-7">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" type="checkbox"> Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-lock"></i>Sign in</button>
                    <a asp-action="register" class="btn btn-default"><i class="fa fa-edit"></i>Register</a>
                </div>
            </div>
        </form>
    </div>
</div>